  "scripts": {
    "build": "tsc",
    "start": "node dist/api/src/server.js",
    "dev:worker": "nodemon --watch worker/src --ext ts,json --legacy-watch --exec \"tsx\" worker/src/imageResize.ts",
    "test": "vitest run",
    "test:watch": "nodemon --watch api/src --watch tests --ext ts,js,json --legacy-watch --exec \"vitest run --reporter=verbose\"",
    "dev:api": "nodemon --watch api/src --ext ts,json --legacy-watch --exec \"tsx\" api/src/server.ts",
    "migrate": "npx prisma migrate deploy && npx prisma generate",
    "test:load": "artillery run tests/artillery/image-upload-test.yml -o tests/artillery/report.json",
    "test:load:report": "artillery report tests/artillery/report.json -o tests/artillery/report.html"
  },
